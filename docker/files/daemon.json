{% from "docker/map.jinja" import docker with context %}
{
  "tls": {{ docker.daemon.tls }},
{% if "tlsverify" in docker.daemon %}
  "tlsverify": {{ docker.daemon.tlsverify }},
{% endif %}
  "hosts": {{ docker.daemon.hosts }},
{% if "tlscert" in docker.daemon %}
  "tlscert": "{{ docker.daemon.tlscert }}",
{% endif %}
{% if "tlskey" in docker.daemon %}
  "tlskey": "{{ docker.daemon.tlskey }}",
{% endif %}
{% if "tlscacert" in docker.daemon %}
  "tlscacert": "{{ docker.daemon.tlscacert }}",
{% endif %}
  "bip": "{{ docker.daemon.bip }}",
  "fixed-cidr": "{{ docker.daemon.fixed_cidr }}",
  "storage-driver": "devicemapper",
  "storage-opts": [
    "dm.thinpooldev={{ docker.daemon.dm_thinpooldev }}",
    "dm.use_deferred_removal=true",
    "dm.use_deferred_deletion=true"
  ]
}
